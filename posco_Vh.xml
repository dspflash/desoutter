<ListCtrl Name="poscoLst" ToolTip="ttp_posco" Size="70,20" visible="0" loadedclick="1">
	<DbDetails fcsm="1">
<Index>posco_id</Index>
<DbTable>desoutter.posco</DbTable>
<Data>jobid,product_id,station_id,posco_id</Data>
